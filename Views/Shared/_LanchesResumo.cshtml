@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" width="200" height="200" /></p>
    <h3>@Model.Preco.ToString("c")</h3>
    <h4>
        <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a>
    </h4>
    <p>@Model.DescricaoDetalhada</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra"
               asp-route-LancheId="@Model.LancheId">
                Incluir no Carrinho
            </a>
        </p>
    </div>
</div>